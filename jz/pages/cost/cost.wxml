<view class="container container-gray">
	<view class="group">
		<view class="group-header">场地信息</view>
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label2">场地</text>
					<picker class="input-item-content" bindchange="bindPickerChange" data-pickername="ground" value="{{groundindex}}" range="{{groundarr}}" mode="selector">{{groundarr[groundindex]}}
					</picker>
				</view>
				<view class="input-item">
					<text class="input-item-label2">商铺号</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入商铺号"></input>
					</view>
				</view>
			</view>
		</view>
		<view class="group-header">签约人员</view>
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label2">签约姓名</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入姓名"></input>
					</view>
				</view>
				<view class="input-item">
					<text class="input-item-label2">身份证号码</text>
					<view class="input-item-content">
						<input type="text" placeholder="请输入身份证号码"></input>
					</view>
				</view>
			</view>
		</view>
		<view class="group-header"></view>
		<view class="group-body">
			<view class="input-list">
				<view class="input-item">
					<text class="input-item-label2">随机验证码</text>
					<view class="input-item-content-flex">
						<input type="text" placeholder="请输入验证码"></input> <image class="image-small-80px" url=""/>
					</view>
					
				</view>
			</view>
		</view>
		
	</view>
	<view class="btn-submit">
		<button class="btn-block btn-orange" bindtap="applySubmit">提交</button>
	</view>
</view>